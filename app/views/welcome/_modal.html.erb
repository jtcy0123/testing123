<!-- Modal for logging in -->
<div class="modal fade" id="loginModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" style="text-align: center;">Login</h4>
      </div>
      <div class="modal-body" style="text-align: center;">
        <%= form_for :session, url: session_path, remote: true do |form| %>
          <div class="text-field">
            <%= form.text_field :email, type: 'email', placeholder: " email", style: "display: inline; border-style: inset; background-color: #eee;" %><label class="input-group-addon glyphicon glyphicon-user" style="display: inline;"></label>
          </div>
          <br>
          <div class="password-field">
            <%= form.password_field :password , placeholder: " password", style: "border-style: inset; background-color: #eee;" %><label for="uPassword" class="input-group-addon glyphicon glyphicon-lock" style="display: inline;"></label>
          </div>
          <div class="checkbox" style="float: left; margin-left: 15px; font-size: 15px;">
            <label>
              <input type="checkbox"> Remember me
            </label>
          </div>
          <div class="submit-field" style="margin-top: 10px">
            <%= form.submit class: 'btn' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="other-links" style="font-size: 13px;">
          <% if Clearance.configuration.allow_sign_up? %>
            new user?
            <a id="signupBtn" data-toggle="modal" data-target="#signupModal" style="color: blue;">create new account</a><br>
          <% end %>
          forgot your password?
          <%= link_to "click here", new_password_path %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal for logging in -->
<div class="modal fade" id="signupModal" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title" style="text-align: center;">SIGN UP</h4>
      </div>
      <div class="modal-body" style="text-align: center;">
        <%= form_for User.new do |form| %>
          <%= render partial: '/users/form', object: form %>
          <div class="submit-field">
            <%= form.submit class: 'btn' %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <div class="other-links" style="font-size: 13px;">
          already have an account?
          <a id="loginBtn" data-toggle="modal" data-target="#loginModal" style="color: blue;">login here</a>
        </div>
      </div>
    </div>
  </div>
</div>
<style type="text/css">
  .modal-dialog {
    width: 300px;
  }
  .modal-footer {
    text-align: center;
    height: 70px;
    margin: 0;
  }
  .modal-footer .btn {
    font-weight: bold;
  }
  .input-group-addon {
    color: #fff;
    background: #ccc;
  }
</style>